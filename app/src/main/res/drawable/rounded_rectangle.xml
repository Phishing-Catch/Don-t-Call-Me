<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DACACA"/> <!-- 그림자 색상 -->
            <corners android:radius="12dp"/> <!-- 모서리 둥근 정도 -->
        </shape>
    </item>

    <!-- 메인 레이어 (배경색 및 모서리 둥근 정도 유지) -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F1EAEB"/> <!-- 배경색 -->
            <corners android:radius="16dp"/> <!-- 모서리 둥근 정도 -->
        </shape>
    </item>
</layer-list>
